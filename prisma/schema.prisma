generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tarefa {
  id         Int      @id @default(autoincrement())
  descricao  String   @db.VarChar(255)
  criada_em  DateTime @default(now())

  @@map("tarefas")
}